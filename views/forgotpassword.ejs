<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>Forgot Password | CodeLab</title>
  <link rel="stylesheet" href="style.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

    <style>
        @import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap');
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}
html,body{
  display: grid;
  height: 100%;
  width: 100%;
  place-items: center;
  background: #f2f2f2;
  /* background: linear-gradient(-135deg, #c850c0, #4158d0); */
}
::selection{
  background: #4158d0;
  color: #fff;
}
.wrapper{
  width: 380px;
  background: #fff;
  border-radius: 15px;
  box-shadow: 0px 15px 20px rgba(0,0,0,0.1);
  font-family: 'Arial';
}
.wrapper .title{
  font-size: 35px;
  font-weight: 600;
  text-align: center;
  line-height: 100px;
  color: #fff;
  user-select: none;
  border-radius: 15px 15px 0 0;
  background: linear-gradient(-135deg, #c850c0, #4158d0);
}
.wrapper form{
  padding: 10px 30px 50px 30px;
}
.wrapper form .field{
  height: 50px;
  width: 100%;
  margin-top: 20px;
  position: relative;
}
.wrapper form .field input{
  height: 100%;
  width: 100%;
  outline: none;
  font-size: 17px;
  padding-left: 20px;
  border: 1px solid lightgrey;
  border-radius: 25px;
  transition: all 0.3s ease;
}
.wrapper form .field input:focus,
form .field input:valid{
  border-color: #4158d0;
}
.wrapper form .field label{
  position: absolute;
  top: 50%;
  left: 20px;
  color: #999999;
  font-weight: 400;
  font-size: 17px;
  pointer-events: none;
  transform: translateY(-50%);
  transition: all 0.3s ease;
}
form .field input:focus ~ label,
form .field input:valid ~ label{
  top: 0%;
  font-size: 16px;
  color: #4158d0;
  background: #fff;
  transform: translateY(-50%);
}
form .content{
  display: flex;
  width: 100%;
  height: 50px;
  font-size: 16px;
  align-items: center;
  justify-content: space-around;
}
form .content input{
  width: 15px;
  height: 15px;
  background: red;
}
form .content label{
  color: #262626;
  user-select: none;
  padding-left: 5px;
}
form .content .pass-link{
  color: "";
}
form .field input[type="submit"]{
  color: #fff;
  border: none;
  padding-left: 0;
  margin-top: -10px;
  font-size: 20px;
  font-weight: 500;
  cursor: pointer;
  background: linear-gradient(-135deg, #c850c0, #4158d0);
  transition: all 0.3s ease;
}
form .field input[type="submit"]:active{
  transform: scale(0.95);
}
form .signup-link{
  color: #262626;
  margin-top: 20px;
  text-align: center;
}
form .pass-link a,
form .signup-link a{
  color: #4158d0;
  text-decoration: none;
}
form .pass-link a:hover,
form .signup-link a:hover{
  text-decoration: underline;
}
    </style>

<div class="wrapper">
  <div class="title">
    Quên Mật Khẩu
  </div>
  <form id="forgot-password-form">
    <div class="field">
      <input id="username" type="text" required>
      <label>Username</label>
    </div>
    <div class="field">
      <input type="submit" value="Gửi Email">
    </div>
    <div class="signup-link">
      <a href="login.html">Quay lại trang đăng nhập</a>
    </div>
  </form>
</div>

</body>
</html>

<script>
    document.getElementById('forgot-password-form').addEventListener('submit', async function(event) {
      event.preventDefault();
    
      const username = document.getElementById('username').value;
    
      // Show loading popup
      const loadingPopup = Swal.fire({
        title: 'Đang xử lý',
        text: 'Vui lòng chờ trong giây lát...',
        icon: 'info',
        showConfirmButton: false,
        allowOutsideClick: false
      });
    
      try {
        const response = await fetch('http://localhost/api/v1/auth/forgotPassword', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ username })
        });
    
 
      const responseData = await response.json();
        loadingPopup.close();
        console.log('Response data Forgot: '+responseData.success);
        if (responseData.success == true) {
          Swal.fire({
            title: "Thành công",
            text: "Đã gửi mật khẩu vào hộp thư",
            icon: "success"
          });
        } else {
          Swal.fire({
            title: "Lỗi",
            text: responseData.data,
            icon: "error"
          });
        }
      } catch (error) {
        console.error('Error sending email:', error);
        // Close loading popup
        loadingPopup.close();
        Swal.fire({
          title: "Error",
          text: "Failed to send email. Please try again.",
          icon: "error"
        });
      }
    });
    </script>
    